<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <typeAliases>
  		<typeAlias type="beans.User" alias="User"/>
  		<typeAlias type="beans.UserProperties" alias="UserProperties"/>
  </typeAliases>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://192.168.1.22:8081/easyfactory"/>
        <property name="username" value="root"/>
        <property name="password" value="network"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="mybatis/mappers/UserMapper.xml"/>
    <mapper resource="mybatis/mappers/UserProperties.xml"/>
  </mappers>
</configuration>